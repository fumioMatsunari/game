<body class="bg-gray-900 text-gray-200 p-8">
    <div class="container mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4">ç¥çµŒè¡°å¼±ã‚²ãƒ¼ãƒ </h1>
        <p class="text-xl mb-6" id="status-message">ã‚«ãƒ¼ãƒ‰ã‚’2æšã‚ãã£ã¦ãã ã•ã„ã€‚</p>
        <div class="game-board grid grid-cols-4 gap-2" id="game-board"></div>
        <button class="mt-8 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-full shadow-lg transition-transform transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500" id="reset-button">ãƒªã‚»ãƒƒãƒˆ</button>
    </div>

    <script>
        // 4x4ã‚°ãƒªãƒƒãƒ‰ç”¨ã«ã‚·ãƒ³ãƒœãƒ«ã‚’8ç¨®é¡ã«æ¸›ã‚‰ã—ã¾ã—ãŸ
        const symbols = ['ğŸ', 'ğŸŒ', 'ğŸ’', 'ğŸ‡', 'ğŸ‰', 'ğŸ“', 'ğŸ‘', 'ğŸ‹'];
        let cards = [];
        let flippedCards = [];
        let matchedPairs = 0;
        let lockBoard = false;

        const gameBoard = document.getElementById('game-board');
        const statusMessage = document.getElementById('status-message');
        const resetButton = document.getElementById('reset-button');

        // ã‚²ãƒ¼ãƒ ãƒœãƒ¼ãƒ‰ã‚’åˆæœŸåŒ–ã™ã‚‹
        function initializeBoard() {
            cards = [...symbols, ...symbols].sort(() => 0.5 - Math.random());
            gameBoard.innerHTML = '';
            flippedCards = [];
            matchedPairs = 0;
            lockBoard = false;
            statusMessage.textContent = 'ã‚«ãƒ¼ãƒ‰ã‚’2æšã‚ãã£ã¦ãã ã•ã„ã€‚';

            cards.forEach((symbol, index) => {
                const cardElement = document.createElement('div');
                cardElement.classList.add('card', 'rounded-lg', 'shadow-md', 'relative');
                cardElement.dataset.symbol = symbol;
                cardElement.dataset.index = index;

                const cardInner = document.createElement('div');
                cardInner.classList.add('card-inner');

                const cardFront = document.createElement('div');
                cardFront.classList.add('card-face', 'card-front', 'bg-slate-600', 'flex', 'items-center', 'justify-center', 'text-4xl');
                cardFront.textContent = symbol;

                const cardBack = document.createElement('div');
                cardBack.classList.add('card-face', 'card-back', 'bg-slate-700');

                cardInner.appendChild(cardFront);
                cardInner.appendChild(cardBack);
                cardElement.appendChild(cardInner);
                
                cardElement.addEventListener('click', flipCard);
                gameBoard.appendChild(cardElement);
            });
        }

        // ã‚«ãƒ¼ãƒ‰ã‚’ã‚ãã‚‹
        function flipCard(event) {
            const clickedCard = event.currentTarget;
            if (lockBoard || clickedCard.classList.contains('is-flipped') || clickedCard.classList.contains('is-matched')) {
                return;
            }

            clickedCard.classList.add('is-flipped');
            flippedCards.push(clickedCard);

            if (flippedCards.length === 2) {
                checkForMatch();
            }
        }

        // ãƒšã‚¢ã«ãªã£ã¦ã„ã‚‹ã‹ç¢ºèªã™ã‚‹
        function checkForMatch() {
            lockBoard = true;
            const [card1, card2] = flippedCards;
            const isMatch = card1.dataset.symbol === card2.dataset.symbol;

            if (isMatch) {
                // æ­£è§£ã®å ´åˆã¯ã‚«ãƒ¼ãƒ‰ã‚’ãã®ã¾ã¾ã«ã™ã‚‹
                card1.classList.add('is-matched');
                card2.classList.add('is-matched');
                card1.removeEventListener('click', flipCard);
                card2.removeEventListener('click', flipCard);
                matchedPairs++;

                if (matchedPairs === symbols.length) {
                    statusMessage.textContent = 'ãŠã‚ã§ã¨ã†ã”ã–ã„ã¾ã™ï¼ã‚²ãƒ¼ãƒ ã‚¯ãƒªã‚¢ã§ã™ï¼';
                }
                resetBoard();
            } else {
                // ä¸æ­£è§£ã®å ´åˆã¯ã‚«ãƒ¼ãƒ‰ã‚’å…ƒã«æˆ»ã™
                unflipCards();
            }
        }

        // ãƒšã‚¢ã«ãªã‚‰ãªã‹ã£ãŸã‚«ãƒ¼ãƒ‰ã‚’å…ƒã«æˆ»ã™
        function unflipCards() {
            setTimeout(() => {
                flippedCards.forEach(card => card.classList.remove('is-flipped'));
                resetBoard();
            }, 1000);
        }

        // ãƒœãƒ¼ãƒ‰ã®çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆã™ã‚‹
        function resetBoard() {
            [flippedCards, lockBoard] = [[], false];
        }

        // ãƒªã‚»ãƒƒãƒˆãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
        resetButton.addEventListener('click', initializeBoard);

        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã«ã‚²ãƒ¼ãƒ ã‚’é–‹å§‹
        window.onload = initializeBoard;
    </script>
